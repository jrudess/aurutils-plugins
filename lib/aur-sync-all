#!/bin/bash
readonly PS4='+(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'

source /usr/share/makepkg/util/message.sh || exit

if [[ -t 2 && ! -o xtrace ]]; then
    colorize
fi

mapfile -t conf < <(aur repo --repo-list)

let "sz = ${#conf[@]}"
index=0
while [ $index -lt $sz ]
do
    aur sync -d ${conf[$index]} "$@"
    index=$((index+1))
done

